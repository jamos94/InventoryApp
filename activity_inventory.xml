<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center">


    <TextView
        android:id="@+id/Inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="10"
        android:gravity="center"
        android:text="Warehouse Inventory" />

    <Button
        android:id="@+id/loadInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Inventory"
        android:text="Load Inventory"/>
    <GridView
        android:id="@+id/InventoryGrid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/updateInventory"
        />
    <Button
        android:id="@+id/updateInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadInventory"
        android:text="Update Inventory"/>


</RelativeLayout>